#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Define a structure to hold user details
struct User {
    int id;
    char username[50];
    char account_type[50];
    double balance;
};

// Function to display user details
void displayUser(struct User user) {
    printf("User ID: %d\n", user.id);
    printf("Username: %s\n", user.username);
    printf("Account Type: %s\n", user.account_type);
    printf("Balance: %.2f\n", user.balance);
    printf("----------------------\n");
}

// Function to retrieve user details from a database (simulated)
void getUsers(struct User userList[], int *userCount) {
    // Simulated database data
    struct User user1 = {1, "user1", "Savings", 1500.0};
    struct User user2 = {2, "user2", "Checking", 2000.0};

    // Populate the user list
    userList[0] = user1;
    userList[1] = user2;

    // Set the user count
    *userCount = 2;
}

// Function to display a list of users
void displayUserList(struct User userList[], int userCount) {
    printf("List of Users:\n");
    printf("----------------------\n");

    for (int i = 0; i < userCount; ++i) {
        displayUser(userList[i]);
    }
}

int main() {
    // Simulated user data
    struct User userList[100];
    int userCount = 0;

    // Admin views the list of users
    getUsers(userList, &userCount);
    displayUserList(userList, userCount);

    return 0;
}
