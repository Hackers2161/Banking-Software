        printf("\n Enter IFSC Code : ");
        scanf("%lld",&f);
         printf("\n Enter Acount Number : ");
        scanf("%lld",&g);
         printf("\n Confirm Acount Number : ");
        scanf("%lld",&h);
        if(g==h){
         printf("Enter the Amount you want to Transfer: ");
    scanf("%d", &Trans);
        }
        else{
            printf("Acount Number and Confirm Acount number are not same\n");
        }
    if (Trans <= TotalAmount) {
        TotalAmount = TotalAmount - Trans;
        switch(e){
            
            case 1: case 2: case 3: case 4: case 5: case 6:
            if(g==h){
             printf("A/c 3XXXXX6925 debited by Rs.%d \nTotal Bal:%d\nNever share OTP/Password for EMI postponement or any reason.-CBoI",Trans,TotalAmount);
            }
             break;
             default :
             printf("Wrong input");
            
        }
       
    } else {
        printf("You do not have sufficient Balance in your Account\n");
    }
}

